<Window x:Class="GraphEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphEditor"
        mc:Ignorable="d"
        Title="Лабораторная №5 | Выбор задания" Height="450" Width="350" ResizeMode="CanMinimize" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Выберите задание:" FontWeight="Bold" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button x:Name="GraphButton" Content="Редактор графов" Margin="15" FontWeight="Bold" Grid.Row="1" Click="GraphButton_Click"/>
        <Button x:Name="TransportNetworksButton" Content="Редактор транспортных сетей" Margin="15" FontWeight="Bold" Grid.Row="2"/>
        <Button x:Name="SpanningTreeButton" Content="Остовное дерево" Margin="15" FontWeight="Bold" Grid.Row="3"/>
    </Grid>
</Window>
