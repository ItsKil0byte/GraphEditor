<Window x:Class="GraphEditor.VertexSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор вершин" Height="200" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Введите ID начальной вершины:"/>
        <TextBox x:Name="StartVertexIdTextBox" Margin="0,5"/>
        
        <TextBlock Text="Введите ID конечной вершины:"/>
        <TextBox x:Name="EndVertexIdTextBox" Margin="0,5"/>
        
        <Button x:Name="OkButton" Content="OK" Click="OkButton_Click" Margin="0,10"/>
    </StackPanel>
</Window>