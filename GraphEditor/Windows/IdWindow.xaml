<Window x:Class="GraphEditor.Windows.IdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphEditor.Windows"
        mc:Ignorable="d"
        Title="Редактирование ID" Height="150" Width="225" ResizeMode="NoResize" FontSize="16">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Новый ID:" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
        <TextBox x:Name="IdTextBox" Grid.Column="1" Margin="10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="CancelButton" Content="Отмена" Grid.Row="1" Grid.Column="0" Margin="10" Click="CancelButton_Click"/>
        <Button x:Name="OkButton" Content="Oк" Grid.Row="1" Grid.Column="1" Margin="10" Click="OkButton_Click"/>
    </Grid>
</Window>
