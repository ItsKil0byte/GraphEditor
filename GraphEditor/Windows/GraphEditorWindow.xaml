<Window x:Class="GraphEditor.Windows.GraphEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphEditor.Windows"
        mc:Ignorable="d"
        KeyDown="GraphCanvas_KeyDown"
        Title="Редактор графов" Height="500" Width="800" ResizeMode="CanMinimize" FontSize="16">
    <Grid>
        <Canvas Name="GraphCanvas" Background="White" Focusable="True"
                MouseRightButtonDown="GraphCanvas_RightClick"
                MouseLeftButtonDown="GraphCanvas_LeftClick"
                MouseDown="GraphCanvas_MouseDown"
                MouseMove="GraphCanvas_MouseMove"
                MouseUp="GraphCanvas_MouseUp"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="5"/>
            <Button Content="Загрузить" Click="LoadButton_Click" Margin="5"/>
            <Button Content="Очистить" Click="ClearButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
